<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false"
    tools:context=".TaskActivity">

    <TextView
        android:id="@+id/tv_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/create_task"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/back_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="96dp"
        android:background="#FFFFFF"
        android:contentDescription="@string/back"
        app:layout_constraintEnd_toStartOf="@+id/tv_task"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_task"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24" />

    <TextView
        android:id="@+id/tv_task1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/title"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/etTitle"
        app:layout_constraintTop_toBottomOf="@+id/tv_task" />

    <TextView
        android:id="@+id/tv_task2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/date"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etTitle"
        app:layout_constraintTop_toBottomOf="@+id/etTitle" />

    <TextView
        android:id="@+id/tv_task3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/start_time"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_Date2"
        app:layout_constraintTop_toBottomOf="@+id/et_Date2" />

    <TextView
        android:id="@+id/tv_task4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/end_time"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/et_Start2"
        app:layout_constraintTop_toBottomOf="@+id/et_Start2" />

    <TextView
        android:id="@+id/tv_task5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/who_will_do"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_Time2"
        app:layout_constraintTop_toBottomOf="@+id/et_Time2" />

    <TextView
        android:id="@+id/tv_task6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/description"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/etWho"
        app:layout_constraintTop_toBottomOf="@+id/etWho" />

    <EditText
        android:id="@+id/etTitle"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_task1" />

    <EditText
        android:id="@+id/etWho"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ems="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_task5"
        app:layout_constraintTop_toBottomOf="@+id/tv_task5" />

    <EditText
        android:id="@+id/etDes"
        android:layout_width="354dp"
        android:layout_height="80dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/tv_task6"
        app:layout_constraintTop_toBottomOf="@+id/tv_task6" />

    <Button
        android:id="@+id/btn_addTask"
        android:layout_width="272dp"
        android:layout_height="42dp"
        android:backgroundTint="@color/gold"
        android:text="@string/btn_create_new_task"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDes" />

    <TextView
        android:id="@+id/et_Date"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/tv_task2"
        app:layout_constraintTop_toBottomOf="@+id/tv_task2" />

    <TextView
        android:id="@+id/et_Start"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/tv_task3"
        app:layout_constraintTop_toBottomOf="@+id/tv_task3" />

    <TextView
        android:id="@+id/et_Time"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/tv_task4"
        app:layout_constraintTop_toBottomOf="@+id/tv_task4" />

    <TextView
        android:id="@+id/et_Date2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="_____________________________________________________________________"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/et_Date"
        app:layout_constraintStart_toStartOf="@+id/tv_task2"
        app:layout_constraintTop_toBottomOf="@+id/et_Date" />

    <TextView
        android:id="@+id/et_Start2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="_________________________"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/et_Start"
        app:layout_constraintStart_toStartOf="@+id/tv_task3"
        app:layout_constraintTop_toBottomOf="@+id/et_Start" />

    <TextView
        android:id="@+id/et_Time2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="_________________________"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/et_Time"
        app:layout_constraintStart_toStartOf="@+id/et_Time"
        app:layout_constraintTop_toBottomOf="@+id/et_Time" />

    <ImageButton
        android:id="@+id/startTimeButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/et_Start2"
        app:layout_constraintStart_toEndOf="@+id/et_Start"
        app:layout_constraintTop_toTopOf="@+id/et_Start"
        app:srcCompat="@drawable/clock" />

    <ImageButton
        android:id="@+id/EndTimeButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/et_Time2"
        app:layout_constraintStart_toEndOf="@+id/et_Time"
        app:layout_constraintTop_toTopOf="@+id/et_Time"
        app:srcCompat="@drawable/clock" />

</androidx.constraintlayout.widget.ConstraintLayout>